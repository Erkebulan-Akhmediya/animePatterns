doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Change User Data
        link(rel="stylesheet", href="/updateUsers.css")
    body 
        header 
            a(href="/admin") Admin
            a(href="/admin/users") Users 
        main 
            form(action="/admin/users/update/" + userID, method="post") 
                label(for="first-name") First Name 
                input#first-name(type="text", name="firstName", value= user.firstName)

                label(for="last-name") Last Name 
                input#last-name(type="text", name="lastName", value= user.lastName)

                label(for="email") Email  
                input#email(type="email", name="email", value= user.email)

                input(type="submit", value="Change User Data")